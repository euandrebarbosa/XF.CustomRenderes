<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:XF.CustomRenderes.Views.Shared;assembly=XF.CustomRenderes"
             x:Class="XF.CustomRenderes.MainPage"
             BackgroundColor="#0DCDA7">

    <StackLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">
        <shared:TextInputView 
            Icon="ic_avatar.png"
            PlaceholderText="Insira seu usuário"/>

        <shared:TextInputView 
            Icon="ic_password.png"
            PlaceholderText="Insira sua senha"/>
    </StackLayout>

</ContentPage>